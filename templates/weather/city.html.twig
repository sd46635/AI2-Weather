{% extends 'base.html.twig' %}

{% block title %}Weather in {{ location.name }}, {{ location.country.code }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ location.name }}, {{ location.country.code }}</h1>

    <ul>
        {% for measurement in measurements %}
            <li>{{ measurement.date|date('d.m.Y') }}: {{ measurement.temperature|round }}&deg;C</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
